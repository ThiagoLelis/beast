<div class="crumbs" xstyle="margin-top:1.1em;">
  <%= link_to "#{I18n.t "site.general.tile_plural"}", home_path %> <span class="arrow">&rarr;</span>
  <%= link_to h(@forum.name), forum_path(@forum) %> <span class="arrow">&rarr;</span>
</div>


<h1 id="new_topic"><%= I18n.t "site.topics.new.new_topic" %></h1>
<p class="subtitle"><%= (I18n.t "site.general.by_user") + current_user.display_name.to_s %></p>


<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => topics_path(@forum) do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag I18n.t "site.topics.new.post_topic", :or => link_to("#{I18n.t "site.general.cancel"}", forum_path(@forum)) %>
<% end -%>

<%= javascript_tag "$('topic_title').focus();" %>

