<h1><%= I18n.t "site.topics.edit.edit_topic" %></h1>

<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => topic_path(@forum, @topic),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<br />
<%= submit_tag I18n.t "site.general.save", :or => link_to((I18n.t "site.general.cancel").to_s, topic_path(@forum, @topic)) %>
<% end -%>