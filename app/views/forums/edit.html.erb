<div class="crumbs">
  <%= link_to "#{I18n.t "site.general.title_plural"}", home_path %> <span class="arrow">&rarr;</span>
</div>

<h1><%= I18n.t "site.forums.edit.edit_forum" %></h1>

<% form_for :forum,
     :url  => forum_path(@forum),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag I18n.t "site.forums.edit.save_forum", :or => link_to((I18n.t "site.general.cancel").to_s, forums_path) %>
<% end -%>