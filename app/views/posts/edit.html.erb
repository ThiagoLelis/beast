<h1><%= 'Edit Post'[] %></h1>

<h2><%= link_to h(@post.topic.title), topic_path(@post.forum_id, @post.topic) %></h2>

<%= link_to("#{I18n.t "site.posts.edit.delete_post"}", post_path(:forum_id => @post.forum_id, :topic_id => @post.topic, :id => @post, :page => params[:page]), 
      :class => "utility", :method => :delete, :confirm => "#{I18n.t "site.posts.edit.delete_post"}") %>

<%= error_messages_for :topic %>
<% form_for :post, :html => { :method => :put }, 
     :url  => post_path(:forum_id => params[:forum_id], :id => params[:topic_id], :id => @post, :page => params[:page]) do |f| -%>
<p id="post_body"><%= f.text_area :body %></p>
<%= submit_tag "#{I18n.t "site.general.save"}" %> or <%= link_to "#{I18n.t "site.general.cancel"}", topic_path(:forum_id => params[:forum_id], :id => params[:topic_id], :page => params[:page]) %>
<% end -%>